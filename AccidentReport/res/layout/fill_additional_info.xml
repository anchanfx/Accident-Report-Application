<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_additional_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <RelativeLayout
        android:id="@+id/layout_fill_additional_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="30dp"
        android:layout_marginTop="121dp"
        android:background="#ffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtview_accident_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:text="@string/accident_type"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txtview_injured"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/edittxt_input_accident_type"
            android:layout_marginTop="14dp"
            android:text="@string/injured"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/txtview_dead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/edittxt_input_injured"
            android:layout_marginRight="18dp"
            android:layout_marginTop="22dp"
            android:text="@string/dead"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/edittxt_input_accident_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/txtview_accident_type"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <EditText
            android:id="@+id/edittxt_input_injured"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtview_injured"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/txtview_injured"
            android:ems="10" />

        <EditText
            android:id="@+id/edittxt_input_dead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/txtview_dead"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/txtview_dead"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/txtview_block_road"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtview_dead"
            android:layout_marginTop="16dp"
            android:text="@string/block_road"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/btn_submit_add_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="@string/btn_submit_info" />

        <TextView
            android:id="@+id/txtview_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/chkbox_block_roads_yes"
            android:text="@string/message"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <CheckBox
            android:id="@+id/chkbox_block_roads_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/edittxt_input_accident_type"
            android:layout_alignTop="@+id/txtview_block_road"
            android:text="Yes!" />

        <EditText
            android:id="@+id/edittxt_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtview_message"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:inputType="textMultiLine" />

    </RelativeLayout>

</RelativeLayout>
