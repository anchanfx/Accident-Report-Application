<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_report"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#EEEEEE"
    android:padding="20dp" >

    <Button
        android:id="@+id/layout_additional_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtview_msg_report"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/btn_close_report" />

    <TextView
        android:id="@+id/txtview_msg_report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="Sending the data to server..." />

</RelativeLayout>
